{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["."],
  "types": ["node", "jest"],
  "exclude": []
}